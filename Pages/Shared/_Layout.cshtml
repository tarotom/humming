<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kissala</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kissala.styles.css" asp-append-version="true" />
</head>
<body>
    <h1 class="center-align">FI*Humming Sacred Birmans</h1>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Kissala</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <button type="button" style="margin:5px" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Kissat
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-page="/Cats">Naaraat</a></li>
                                <li><a class="nav-link text-dark" >Urokset</a></li>
                                <li><a class="nav-link text-dark" >Kastraatit</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/CatBasket">Kissakori</a>
                        </li>
                        <li>
                            <button type="button" style="margin:5px" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Pentueet
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-page="/Litters">1. pentue</a></li>
                                <li><a class="nav-link text-dark" asp-page="/Litters">2. pentue</a></li>
                                <li><a class="nav-link text-dark" asp-page="/Litters">3. pentue</a></li>
                                <li><a class="nav-link text-dark" asp-page="/Litters">4. pentue</a></li>
                                <li><a class="nav-link text-dark" asp-page="/Litters">5. pentue</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/News">Uutiset</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Kissala - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>